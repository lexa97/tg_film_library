# Telegram Bot Token
BOT_TOKEN=your_telegram_bot_token_here

# TMDB API Key (Bearer token)
TMDB_API_KEY=your_tmdb_api_key_here

# Prowlarr API
PROWLARR_URL=http://prowlarr:9696
PROWLARR_API_KEY=your_prowlarr_api_key_here

# Proxy (опционально, для обхода блокировок)
# HTTP/HTTPS прокси:
# PROXY_URL=http://user:password@proxy-host:8080
# SOCKS5 прокси (требует установки httpx[socks]):
# PROXY_URL=socks5://proxy-host:1080
# Если прокси не нужен, закомментируйте или удалите эту строку
# PROXY_URL=

# Database URL
# For local development:
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/tg_film_library

# For Docker Compose (автоматически формируется из POSTGRES_* переменных):
# DATABASE_URL=postgresql+asyncpg://tgfilm:tgfilm_secret@db:5432/tg_film_library
